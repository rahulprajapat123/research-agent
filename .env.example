# Application Settings
APP_NAME=RAG Research Intelligence System
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ALLOWED_ORIGINS=*

# OpenAI API (Required)
OPENAI_API_KEY=your-openai-api-key-here

# Azure Blob Storage (Required for caching)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=research-papers

# Upstash Redis (Optional - for advanced caching)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Azure Database (Optional - for advanced features)
AZURE_DB_TYPE=postgresql
AZURE_DB_CONNECTION_STRING=

# LLM Provider Selection
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000
EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI (Alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
